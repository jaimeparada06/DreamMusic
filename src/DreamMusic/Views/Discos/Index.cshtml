@model IEnumerable<DreamMusic.Models.Disco>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Discos" asp-action="Index" method="get">
    <p>
        Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrecioDeCompra)
                @Html.DisplayNameFor(model => model.PrecioDeDevolucion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLanzamiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioDeCompra)
                @Html.DisplayFor(modelItem => item.PrecioDeDevolucion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLanzamiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiscoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiscoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiscoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
