@model DreamMusic.Models.Restauracion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Restauracion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
