@model IEnumerable<DreamMusic.Models.Restauracion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @* Change the link *@
    <a asp-action="SelectDiscosParaRestauracion" asp-controller="Discos" id="SelectDiscosParaRestauracion">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrecioTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRestauracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRestauracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administrador.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RestauracionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RestauracionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RestauracionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
